<UserControl x:Class="WpfControlLibrary1.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <Style x:Key="gg">
                <Setter Property="ItemsControl.FontSize" Value="16"/>
            </Style>
        </Grid.Resources>
        <StackPanel Width="240" Style="{StaticResource gg}">
            <TextBlock Text="Login"/>
            <TextBox x:Name="LoginBox"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PassBox"/>
            <TextBlock Text="Service"/>
            <TextBox x:Name="Service"/>
            <TextBlock Text="To"/>
            <TextBox x:Name="To"/>
            <TextBlock Text="Theme"/>
            <TextBox x:Name="Theme"/>
            <TextBlock Text="Body"/>
            <TextBox x:Name="Body" MaxLines="15"/>
            <Button x:Name="Send" Content="&#xE724;" FontFamily="Segoe MDL2 Assets" FontSize="24" Click="Send_Click"/>
            <Button x:Name="Save" Content="saveme" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
